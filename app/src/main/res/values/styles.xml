<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Theme.RealEstateManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/englishGreen</item>
        <item name="colorPrimaryVariant">@color/englishGreenDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/ocher</item>
        <item name="colorSecondaryVariant">@color/ocherDark</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:fontFamily">@font/tangerine_bold</item>
        <item name="materialButtonStyle">@style/estate_button_style</item>

    </style>

    <style name="estate_button_style" parent="Theme.MaterialComponents">
        <item name="materialButtonStyle">@drawable/button_style</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/ocherDark</item>
        <item name="elevation">5dp</item>
    </style>


</resources>
