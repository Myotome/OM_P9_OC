<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Theme.RealEstateManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">

<!--        <item name="colorPrimary">@color/englishGreen</item>-->
<!--        <item name="colorPrimaryVariant">@color/englishGreenDark</item>-->
        <item name="colorPrimary">@color/app_grey</item>
        <item name="colorPrimaryVariant">@color/app_grey_dark</item>
        <item name="colorOnPrimary">@color/gold</item>

        <item name="colorSecondary">@color/app_green</item>
        <item name="colorSecondaryVariant">@color/app_green_dark</item>
        <item name="colorOnSecondary">@color/silver</item>

        <item name="android:textColor">@color/silver</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


<!--        <item name="android:fontFamily">@font/tangerine_bold</item>-->
        <item name="materialButtonStyle">@style/estate_button_style</item>

    </style>

    <style name="estate_button_style" parent="Theme.MaterialComponents">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    
    <style name="checkBox_landscape_app">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="app_button_aoe_lanscape">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
